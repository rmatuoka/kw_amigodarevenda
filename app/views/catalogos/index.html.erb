<%content_for :title do%>
	
<%end%>

<%content_for :head do%>
	<%=stylesheet_link_tag "downloads"%>
<%end%>

<div id="Barradown">
	<div class="Titulos"><img src="/images/tit_downloads.png" style="float:left;"/><h1>Cat√°logos</h1></div>
</div>
<table width="940" class="Tabup">
	<tr>
		<td width="5%" class="Tabupcel">
		</td>
		<td width="52%" class="Tabupcel">
			Categoria
		</td>
		<td width="18%" class="Tabupcel">
			Tamanho
		</td>
		<td width="25%" class="Tabupcel">
			Abrir
		</td>		
	</tr>
</table>
<table width="940" class="Tabdown">
<%@downloads.each do |d|%>
	<tr>
	<td width="5%">
		<%=image_tag("icones/download/doc.png") if d.file.content_type == "application/msword"%>
		<%=image_tag("icones/download/jpg.png") if d.file.content_type == "image/jpeg" || d.file.content_type == "image/pjpeg"  || d.file.content_type == "image/gif"  || d.file.content_type == "image/png"  || d.file.content_type == "image/x-png"  || d.file.content_type == "image/jpg" %>

		<%=image_tag("icones/download/pdf.png") if d.file.content_type == "application/pdf"%>
		<%=image_tag("icones/download/ppt.png") if d.file.content_type == "application/vnd.ms-powerpoint"%>
		<%=image_tag("icones/download/xls.png") if d.file.content_type == "application/vnd.ms-excel"%>
		<%=image_tag("icones/download/all.png") if d.file.content_type != "application/vnd.ms-excel" && d.file.content_type != "application/vnd.ms-powerpoint"  && d.file.content_type != "application/pdf" && d.file.content_type != "image/jpg" && d.file.content_type != "image/x-png"  && d.file.content_type != "image/png"  && d.file.content_type != "image/gif"  && d.file.content_type != "image/pjpeg"  && d.file.content_type != "image/jpeg"  && d.file.content_type != "application/msword" %>
	</td>
	<td width="52%" class="left"><%=d.name%></td>
	<td width="18%"><%=d.file_file_size%> kb</td>
	<td width="25%"><%=link_to(image_tag("btn_download.png"), d.file.url)%></td>
	</tr>
<%end%>
</table>