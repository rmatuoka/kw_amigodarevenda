<% title "Poll Questions" %>

<table>
  <tr>
    <th>Poll</th>
    <th>Question</th>
    <th>Published</th>
    <th>Total Votes</th>
  </tr>
  <% for poll_question in @poll_questions %>
    <tr>
      <td><%=h poll_question.poll_id %></td>
      <td><%=h poll_question.question %></td>
      <td><%=h poll_question.published %></td>
      <td><%=h poll_question.total_votes %></td>
      <td><%= link_to "Show", admin_poll_poll_question_path(@poll, poll_question) %></td>
      <td><%= link_to "Edit", edit_admin_poll_poll_question_path(@poll, poll_question) %></td>
      <td><%= link_to "Destroy", admin_poll_poll_question_path(@poll, poll_question), :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Poll Question", new_admin_poll_poll_question_path(@poll) %></p>
