<% title "Polls" %>

<table>
  <tr>
    <th>Name</th>
    <th>Multiple</th>
    <th>Data Inicio</th>
    <th>Data Fim</th>
    <th>Published</th>
  </tr>
  <% for poll in @polls %>
    <tr>
      <td><%=h poll.name %></td>
      <td><%=h poll.multiple %></td>
      <td><%=h poll.data_inicio %></td>
      <td><%=h poll.data_fim %></td>
      <td><%=h poll.published %></td>
	  <td><%= link_to "Questions", admin_poll_poll_questions_path(poll) %></td>
      <td><%= link_to "Show", admin_poll_path(poll) %></td>
      <td><%= link_to "Edit", edit_admin_poll_path(poll) %></td>
      <td><%= link_to "Destroy", admin_poll_path(poll), :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Poll", new_admin_poll_path %></p>
