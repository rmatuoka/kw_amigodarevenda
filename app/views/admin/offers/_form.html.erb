<%= form_for ([:admin, @offer], :html => { :multipart => :true }) do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :image %><br />
    <%= f.file_field :image %>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.label :date_inicio %><br />
    <%= f.datetime_select :date_inicio %>
  </p>
  <p>
    <%= f.label :data_fim %><br />
    <%= f.datetime_select :data_fim %>
  </p>
  <p>
    <%= f.label :published %><br />
    <%= f.check_box :published %>
  </p>
  <p>
    <%= f.label :total_clicks %><br />
    <%= f.text_field :total_clicks %>
  </p>
  <p><%= f.submit %></p>
<% end %>
