<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
  <head>
    <title><%= h(yield(:title) || "Untitled") %></title>
    <%= stylesheet_link_tag 'admin' %>
	<%= stylesheet_link_tag 'custom_theme/jquery-ui-1.8.7.custom' %>
	<%=javascript_include_tag "jquery-1.4.4.min"%>
	<%=javascript_include_tag "jquery-ui-1.8.7.custom.min"%>
    <%= yield(:head) %>
  </head>
  <body>
    <div id="container">
	    <div id="header">
	  		<div id="menu">
	  			<ul>
	  				<li>Home</li>
	  				<li><%=link_to "Downloads", admin_downloads_path%></li>
					<li><%=link_to "Promoções", admin_offers_path%></li>
					<li><%=link_to "Notícias", admin_notices_path%></li>
					<li><%=link_to "Enquetes", admin_polls_path%></li>
					<li><%=link_to "Updates", admin_updates_path%></li>
					<li><%=link_to "Revendedores", admin_resellers_path%></li>
					<li><%=link_to "Transportadoras", admin_transporters_path%></li>
	  			</ul>
	  		</div>
	  	</div>
      <%- flash.each do |name, msg| -%>
        <%= content_tag :div, msg, :id => "flash_#{name}" %>
      <%- end -%>

      <%- if show_title? -%>
        <h1><%=h yield(:title) %></h1>
      <%- end -%>

      <%= yield %>
    </div>
  </body>
</html>
