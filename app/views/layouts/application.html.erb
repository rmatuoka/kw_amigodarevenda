<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<title>Amigo da Revenda <%=yield :title%></title>
<%=stylesheet_link_tag "estilo"%>
<%=stylesheet_link_tag "ui-lightness/jquery-ui-1.8.17.custom.css"%>

<%=javascript_include_tag  :defaults %>
<%=javascript_include_tag "jquery-ui-1.8.17.custom.min.js"%>
<%=javascript_include_tag "jquery.printElement.min.js"%>
<%= javascript_include_tag "jquery.tools.min.js" %>
<%= javascript_include_tag "autocomplete-rails.js"%>
<%=yield :head%>
</head>
<body>
<div id="Geral">
  <div id="Header">
    	<div id="Barralog">
            <a href="http://www.nautilus.ind.br" style="float:left; margin:5px 0 0 28px">Voltar para site Nautilus</a>
            <p style="float:right; margin:5px 35px 0 0px;"><%=data_atual_extenso%>  |  <%=hora_atual_resumida%>  
			<% if current_user %>
			 | <span class="Tx_logout"><%=link_to "Logout", logout_path%></span>
			<%end%>
			</p>
        </div>

<% if current_user %>      
	<div id="Infouser">
		<div id="Boxuser">
			<p style=" text-align:right; margin:5px 0px 5px 5px; font-size:large;">
				<% 
				if current_user.has_role? :representante 
				@representante = current_user.representants.first
				%>
				<%=@representante.nome%>
				<%end%>
			</p>
			<p style="float:right;">
				<img src="/images/img_boxinfouser.png" width="20" height="14" style="margin:auto 15px" /><span class="Boxuser_align_text1"><%=link_to "Visualizar Dados", representant_path(@representante)%></span>
				<img src="/images/img_boxinfouser2.png" width="18" height="18" style="margin:auto 15px" /><span class="Boxuser_align_text1"> Configurações</span>
			</p>
	  </div>
	<%if @representante.image.blank?%>
		<img src="/images/img_perfilfoto.png" width="222" height="222" style="margin:10px auto 0 auto; float:left;" /> 
	<%else%>
		<%=image_tag(@representante.image.url("thumb"), :style => "width:95px; float:right; margin:15px 0px 0 0;")%>
	<%end%>
	  
	</div>
	<%end%>

    <div id="Busca">
		<!-- <input type="text" name="busca" value="Busca" border="none" onfocus="if(this.value=='Busca'){this.value=''};" onblur="if(this.value==''){this.value='Busca'};" /> -->
	</div>

      <%=render :file => "/layouts/_menu.html.erb"%>
      <a href="/home"><div id="Logo" ></div></a>
  </div>
  

	<div id="Center">
		<%=yield%>
    </div>
	
	<div id="Footer">
        <div id="Conteudo">
            <div id="Menu"><p><%=link_to "Home", root_path%> <a>|</a> <%=link_to "Site da Nautilus", "http://www.nautilus.ind.br", :target => "_blank"%> <a>|</a> <%=link_to "Sobre Amigos da Revenda", sobre_index_path%> <a>|</a> <%=link_to "Politica de Privacidade", politica_privacidade_index_path%><a>|</a> <%=link_to "Termos de Uso", termos_de_uso_index_path%><a>|</a> <%=link_to "Ajuda", ajuda_index_path%></p>
            </div>
        </div>
    </div>
</div>
